{
  "$schema": "https://unpkg.com/@camunda/element-templates-json-schema/resources/schema.json",
  "name": "http-connector",
  "id": "com.codot.camundaconnectors.http.c7",
  "description": "CODOT HTTP Connector",
  "version": 1,
  "entriesVisible": false,
  "appliesTo": [
    "bpmn:ServiceTask"
  ],
  "elementType": {
    "value": "bpmn:ServiceTask"
  },
  "groups": [
    {
      "id": "inputs",
      "label": "Input Mapping"
    },
    {
      "id": "output",
      "label": "Output Mapping"
    },
    {
      "id": "debug",
      "label": "Debug tools"
    }
  ],
  "properties": [
    {
      "label": "Implementation Type",
      "type": "Hidden",
      "value": "com.codot.camundaconnectors.http.HttpFunction",
      "editable": false,
      "binding": {
        "type": "property",
        "name": "camunda:class"
      }
    },
	 {
      "label": "Method",
      "type": "Dropdown",
		"value": "GET",
      "choices": [
        {
          "name": "POST",
          "value": "POST"
        },
        {
          "name": "GET",
          "value": "GET"
        },
        {
          "name": "DELETE",
          "value": "DELETE"
        }
      ],
      "binding": {
        "type": "camunda:inputParameter",
        "name": "method"
      },
      "constraints": {
        "notEmpty": true
      },
      "group": "inputs"
    },
    {
      "label": "URL",
      "type": "String",
      "feel": "required",
      "binding": {
        "type": "camunda:inputParameter",
        "name": "url"
      },
      "constraints": {
        "notEmpty": true
      },
      "group": "inputs"
    },
    {
      "label": "Headers",
      "type": "Text",
      "feel": "required",
		"value": "{\"Content-Type\":\"application/json\"}",
      "binding": {
        "type": "camunda:inputParameter",
        "name": "headers"
      },
      "group": "inputs"
    },
    {
      "label": "Timeout",
      "type": "String",
      "feel": "required",
		"value": "60000",
      "binding": {
        "type": "camunda:inputParameter",
        "name": "timeout"
      },
      "constraints": {
        "notEmpty": true
      },
      "group": "inputs"
    },
    {
      "label": "Payload",
      "type": "Text",
      "feel": "required",
      "binding": {
        "type": "camunda:inputParameter",
        "name": "payload"
      },
      "group": "inputs"
    },
    {
      "label": "File name",
      "type": "String",
      "feel": "required",
      "binding": {
        "type": "camunda:inputParameter",
        "name": "response_file_name"
      },
      "constraints": {
        "notEmpty": true
      },
      "group": "inputs"
    },
    {
      "label": "status code",
      "description": "Name of variable to store the response in",
      "group": "output",
      "type": "String",
		"value": "status_code",
      "constraints": {
        "notEmpty": true
      },
      "binding": {
        "type": "camunda:outputParameter",
        "source": "${status_code}"
      }
    },
    {
      "label": "status massage",
      "description": "Name of variable to store the response in",
      "group": "output",
      "type": "String",
		"value": "status_msg",
      "constraints": {
        "notEmpty": true
      },
      "binding": {
        "type": "camunda:outputParameter",
        "source": "${status_msg}"
      }
    },
    {
      "label": "response body",
      "description": "Name of variable to store the response in",
      "group": "output",
      "type": "String",
		"value": "response_body",
      "constraints": {
        "notEmpty": true
      },
      "binding": {
        "type": "camunda:outputParameter",
        "source": "${response_body}"
      }
    },


    {
      "label": "response file path",
      "description": "Name of variable to store the response in",
      "group": "output",
      "type": "String",
		"value": "response_file_path",
      "constraints": {
        "notEmpty": true
      },
      "binding": {
        "type": "camunda:outputParameter",
        "source": "${response_file_path}"
      }
    },
	{
      "label": "Debug mode",
      "feel": "required",
      "binding": {
        "type": "camunda:inputParameter",
        "name": "debugMode"
      },
		"value": "false",
      "constraints": {
        "notEmpty": true
      },
		"type": "Dropdown",
      "choices": [
        {
          "name": "TRUE",
          "value": "true"
        },
        {
          "name": "FALSE",
          "value": "false"
        }
      ],
      "group": "debug"
    }
  ]
}